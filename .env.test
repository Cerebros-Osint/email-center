# Configuration de test simplifiée (SQLite + mock Redis)
# Base de données SQLite (pas besoin de PostgreSQL)
DATABASE_URL="file:./dev.db"

# Redis mock (pour test sans Redis serveur)
REDIS_URL="redis://localhost:6379"
REDIS_DISABLED="true"

# Auth & Security
SESSION_SECRET="test-session-secret-min-32-characters-long-for-dev-purposes"
ENCRYPTION_KEY="0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef"

# IMAP (optionnel pour test)
IMAP_HOST="imap.gmail.com"
IMAP_PORT="993"
IMAP_USER="test@example.com"
IMAP_PASS="test-password"
REPLY_DOMAIN="example.com"

# AWS SES (optionnel)
SES_REGION="us-east-1"
SES_ACCESS_KEY_ID=""
SES_SECRET_ACCESS_KEY=""

# Titan Email (optionnel)
TITAN_HOST="smtp.titan.email"
TITAN_PORT="587"
TITAN_USER=""
TITAN_PASS=""

# AWS Route53 (optionnel)
ROUTE53_ACCESS_KEY_ID=""
ROUTE53_SECRET_ACCESS_KEY=""
ROUTE53_REGION="us-east-1"

# Cloudflare (optionnel)
CLOUDFLARE_API_TOKEN=""
CLOUDFLARE_ZONE_ID=""

# App
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Seed credentials (pour données de test)
SEED_SES_USERNAME="demo-ses"
